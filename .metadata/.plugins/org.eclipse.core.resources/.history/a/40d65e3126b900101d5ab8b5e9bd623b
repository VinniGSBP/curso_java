package estrutura_repetitiva;

import java.util.Scanner;

public class estrutura_while {
	public static void main (String[]args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite um numero inteiro: ");
		 int x = sc.nextInt();
		 
		 while (x != 0) {
			 x = sc.nextInt();
		 }
		 
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		sc.close();
	}
}
